#include<iostream>
using namespace std;
class node{
    public:
    int data;
    node*right;
    node(int x){
        data=x;
        right=NULL;
    }
};
node*insertlast(node*head,int x){
    if(head==NULL){
         head=new node(x);
         head->right=head;
         return head;
    }
    else{
       node*p1=head;
       while(p1->right!=head){
           p1=p1->right;
       }
       p1->right=new node(x);
       p1->right->right=head;
       return head;
    }
}
node*insertfirst(node*head,int x){
    if(head==NULL){
        head=new node(x);
        head->right=head;
        return head;
    }else{
        node*p1=head;
       while(p1->right!=head){
           p1=p1->right;
       }
        node*p2=new node(x);
        p2->right=head;
        head=p2;
        p1->right=head;
        return head;
    }
}
node*deletelast(node*head){
    if(head==NULL){
        cout<<"empty";
        return NULL;
    }else if(head->right==head){
       delete head;
        return NULL;;
    }else{
        node*p1=head;
        while(p1->right->right!=head){
            p1=p1->right;
        }
        delete p1->right;
            p1->right=head;
            return head;
    }
}
node*deleteatfirst(node*head){
      if (head == NULL)
        return NULL;
    if (head->right == head) {
        delete head;
        return NULL;
    }
     node* last = head;
    while (last->right != head) {
        last = last->right;  
    }

    node* temp = head;      
    head = head->right;      
    last->right = head;      
    delete temp;             

    return head;
}
void traverse(node*head){
    node*p1=head;
    while(p1->right!=NULL){
        cout<<p1->data<<" ";
        p1=p1->right;
    }
    while(p1){
        
        cout<<p1->data<<" ";
        p1=p1->left;
    }
    
}
int main(){
    int arr[]={2,4,6,8};
    node*head=NULL;
    for(int i=0;i<4;i++){
        head=insertlast(head,arr[i]);
    }
    traverse(head);
}
